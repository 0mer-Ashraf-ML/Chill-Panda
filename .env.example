# Chill Panda Environment Configuration

# Server Configuration
PORT=8000

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
MINIMAX_API_KEY=your_minimax_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=chill_panda

# Voice Usage Limits (in seconds for precision)
# Test limits - set low for testing
VOICE_LIMIT_PER_SESSION_SECONDS=30          # 30 seconds per session
VOICE_LIMIT_PER_DAY_SECONDS=60              # 1 minute per day
VOICE_LIMIT_PER_MONTH_SECONDS=600           # 10 minutes per month

# Abuse Detection Thresholds
VOICE_ABUSE_CONTINUOUS_THRESHOLD_SECONDS=300      # 5 min continuous = abuse flag
VOICE_ABUSE_SESSION_COUNT_THRESHOLD=10            # 10+ long sessions/day = abuse flag
VOICE_ABUSE_LONG_SESSION_THRESHOLD_SECONDS=180    # Sessions > 3 min are "long"
